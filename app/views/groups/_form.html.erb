    <%= f.radio_button :icon, 'fa fa-bed' %> <i class="fa fa-bed mx-3" aria-hidden="true"></i>
    <%= f.radio_button :icon, 'fa fa-cutlery' %> <i class="fa fa-cutlery mx-3" aria-hidden="true"></i>
    <%= f.radio_button :icon, 'fa fa-shopping-cart' %> <i class="fa fa-shopping-cart mx-3" aria-hidden="true"></i>
    <%= f.radio_button :icon, 'fa fa-tree' %> <i class="fa fa-tree mx-3" aria-hidden="true"></i>
    <%= f.radio_button :icon, 'fa fa-bus' %><i class="fa fa-bus mx-3" aria-hidden="true"></i>
    <%= f.radio_button :icon, 'fa fa-taxi' %> <i class="fa fa-taxi mx-3" aria-hidden="true"></i>
    
  </p>
  <%= f.submit class: "submit btn btn-success" %>

</div>
