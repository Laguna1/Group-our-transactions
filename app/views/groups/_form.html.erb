<div class="container text-center">
<%= form_for @group do |f| %>
  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.text_field :name, class: "form-control", placeholder: "Name for group*"  %>
   </div>
  <div class="field">
    <%= f.radio_button :icon, 'fa fa-phone' %><i class="fa fa-phone mx-3" aria-hidden="true"></i>
