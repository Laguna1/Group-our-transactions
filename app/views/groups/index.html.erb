<h1>Groups</h1>
  <% @groups.each do |group| %>
    <p> <%= image_tag group.icon.url if group.icon? %>
      <%= link_to group.name, group %><br>
      <%= group.created_at %>
      <%= link_to 'Edit', edit_group_path(group) %>
      <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
     
    <% end %>
    </p> 
